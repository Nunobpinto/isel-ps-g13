<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lecture_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Weekday:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/to_insert_lecture_weekday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="68dp"
        android:text="Insert Weekday"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toStartOf="@+id/lecture_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/lecture_begins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lecture_location"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:text="Begins:"
        app:layout_constraintEnd_toStartOf="@+id/to_insert_lecture_begins"
        app:layout_constraintTop_toBottomOf="@+id/lecture_location" />

    <TextView
        android:id="@+id/to_insert_lecture_begins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lecture_location"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="32dp"
        android:text="Insert Begins"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lecture_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lecture_begins"
        android:layout_marginTop="32dp"
        android:text="Duration:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/to_insert_lecture_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lecture_begins"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:text="Insert Duration"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toStartOf="@+id/lecture_begins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lecture_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lecture_weekday"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:text="Location:"
        app:layout_constraintEnd_toStartOf="@+id/to_insert_lecture_location"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/to_insert_lecture_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lecture_weekday"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="32dp"
        android:text="Insert Location"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>