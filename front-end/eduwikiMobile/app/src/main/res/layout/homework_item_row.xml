<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/homework_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Due Date:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homework_late_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="36dp"
        android:text="Late Delivery:"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/homework_late_delivey_swich"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homework_multiple_deliveries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:text="Multiple Deliveries:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/homework_late_delivey_swich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:clickable="false"
        android:showText="true"
        android:textOff="No"
        android:textOn="Yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/homework_multiple_deliveries_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:clickable="false"
        android:showText="true"
        android:textOff="No"
        android:textOn="Yes"
        app:layout_constraintEnd_toStartOf="@+id/homework_late_delivery"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/homework_multiple_deliveries"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/to_insert_homework_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="Insert Due Date"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/homework_due_date"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>